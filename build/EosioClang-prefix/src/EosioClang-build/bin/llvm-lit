#!/usr/bin/env python

import os
import sys

config_map = {}

def map_config(source_dir, site_config):
    global config_map
    source_dir = os.path.realpath(source_dir)
    source_dir = os.path.normcase(source_dir)
    site_config = os.path.normpath(site_config)
    config_map[source_dir] = site_config

# Variables configured at build time.
llvm_source_root = "/home/abinesh/eosio.cdt/eosio_llvm"
llvm_obj_root = "/home/abinesh/eosio.cdt/build/EosioClang-prefix/src/EosioClang-build"

# Make sure we can find the lit package.
sys.path.insert(0, os.path.join(llvm_source_root, 'utils', 'lit'))

# Set up some builtin parameters, so that by default the LLVM test suite
# configuration file knows how to find the object tree.
builtin_parameters = { 'build_mode' : "." }


map_config('/home/abinesh/eosio.cdt/eosio_llvm/tools/clang/test/lit.cfg.py', '/home/abinesh/eosio.cdt/build/EosioClang-prefix/src/EosioClang-build/tools/clang/test/lit.site.cfg.py')
map_config('/home/abinesh/eosio.cdt/eosio_llvm/tools/clang/test/Unit/lit.cfg.py', '/home/abinesh/eosio.cdt/build/EosioClang-prefix/src/EosioClang-build/tools/clang/test/Unit/lit.site.cfg.py')
map_config('/home/abinesh/eosio.cdt/eosio_llvm/tools/lld/test/lit.cfg.py', '/home/abinesh/eosio.cdt/build/EosioClang-prefix/src/EosioClang-build/tools/lld/test/lit.site.cfg.py')
map_config('/home/abinesh/eosio.cdt/eosio_llvm/tools/lld/test/Unit/lit.cfg.py', '/home/abinesh/eosio.cdt/build/EosioClang-prefix/src/EosioClang-build/tools/lld/test/Unit/lit.site.cfg.py')
map_config('/home/abinesh/eosio.cdt/eosio_llvm/utils/lit/tests/lit.cfg', '/home/abinesh/eosio.cdt/build/EosioClang-prefix/src/EosioClang-build/utils/lit/lit.site.cfg')
map_config('/home/abinesh/eosio.cdt/eosio_llvm/test/lit.cfg.py', '/home/abinesh/eosio.cdt/build/EosioClang-prefix/src/EosioClang-build/test/lit.site.cfg.py')
map_config('/home/abinesh/eosio.cdt/eosio_llvm/test/Unit/lit.cfg.py', '/home/abinesh/eosio.cdt/build/EosioClang-prefix/src/EosioClang-build/test/Unit/lit.site.cfg.py')

builtin_parameters['config_map'] = config_map

if __name__=='__main__':
    from lit.main import main
    main(builtin_parameters)
